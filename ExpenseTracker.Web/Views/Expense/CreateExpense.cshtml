@model ExpenseTracker.Application.ViewModels.Expense.NewExpenseVm
@{
    ViewData["Title"] = "CreateExpense";
}
<h1 style="margin-top:33px;">Nowy wydatek</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateExpense">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="UserId" /> @*value="@Model.UserId" ustawia się samo dzięki asp-for*@
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="BudgetId" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Data</label>
                <input type="date" value="@DateTime.Now.Date" min="2019-01-01" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Kwota</label>
                <div class="input-group mb-3">
                    <input asp-for="Amount" class="form-control" />
                    <div class="input-group-prepend">
                        <span class="input-group-text">zł</span>
                    </div>
                </div>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedCategory" class="control-label">Kategoria</label>
                @Html.DropDownListFor(x => Model.SelectedCategory, new SelectList(Model.Categories, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="SelectedCategory" class="text-danger"></span>
            </div>
            <div class="form-group" style="float:left; margin-right:8px;">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
            <div>
                <a class="btn btn-outline-secondary" asp-action="Index">Cofnij</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
