@model ExpenseTracker.Application.ViewModels.PlannedExpense.PlannedExpenseForEditVm

@{
    ViewData["Title"] = "EditPlannedExpsOfDetailedCatPerMonth";
}

<h1>EditPlannedExpsOfDetailedCatPerMonth</h1>

<h4>PlannedExpenseForEditVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPlannedExpsOfDetailedCatPerMonth">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="MainCategoryId" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="MonthOfYear" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@{
    var parms = new Dictionary<string, string>
{
        { "monthOfYear", Model.MonthOfYear.ToString() },
        { "mainCategoryId", Model.MainCategoryId.ToString()}
    };
}
<div>
    <a asp-action="GetPlannedExpensesOfMainCategory" asp-all-route-data="@parms" >Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
