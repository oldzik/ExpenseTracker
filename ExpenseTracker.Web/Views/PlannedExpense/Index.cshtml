@model ExpenseTracker.Application.ViewModels.PlannedExpense.PlannedExpensesOfAllMainCatVm

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @Model.MonthOfYear.Day.@Model.MonthOfYear.Month.@Model.MonthOfYear.Year r.
</p>
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Kategoria
                </th>
                <th>
                    Zaplanowane wydatki
                </th>
                <th>
                    Aktualnie wydano
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PlannedExpOfMainCat)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlannedAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SpentAmount)
                    </td>
                    <td>
                        @Html.ActionLink("Pokaż szczegóły", "GetPlannedExpensesOfMainCategory", new { monthOfYear=Model.MonthOfYear, mainCategoryId=item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>
        <a asp-action="PlanExpensesPerMonth" asp-route-monthOfYear="@Model.MonthOfYear">Zaplanuj wydatki</a>
    </p>
    <p>Brak zaplanowanych wydatków na ten miesiąc...</p>
}

<p>
    <a asp-action="Index" asp-route-monthOfYear="@Model.MonthOfYear.AddMonths(-1)">Poprzedni miesiąc</a>
</p>
<p>
    <a asp-action="Index" asp-route-monthOfYear="@Model.MonthOfYear.AddMonths(1)">Następny miesiąc</a>
</p>
