@model ExpenseTracker.Application.ViewModels.PlannedExpense.ListNewPlannedExpensePerMonthVm

@{
    ViewData["Title"] = "PlanExpensesPerMonth";
}

<h1>PlanExpensesPerMonth</h1>

<h4>ListNewPlannedExpensePerMonthVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PlanExpensesPerMonth">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MonthOfYear" class="control-label"></label>
                <input type="month" min="2019-01" value="@DateTime.Now.Year-@DateTime.Now.Month" asp-for="MonthOfYear" class="form-control" />
                <span asp-validation-for="MonthOfYear" class="text-danger"></span>
            </div>
            @for(int i=0;i<Model.PlannedExpenses.Count;i++)
            {
        <div class="form-group">
            <label class="control-label">@Model.PlannedExpenses[i].DetCategory.Name</label>
            <input type="hidden" asp-for="@Model.PlannedExpenses[i].DetCategory.Id" />
            <input type="hidden" asp-for="@Model.PlannedExpenses[i].DetCategory.Name" />
            <input asp-for="@Model.PlannedExpenses[i].Amount" class="form-control" />
            <span asp-validation-for="@Model.PlannedExpenses[i].Amount" class="text-danger"></span>
        </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
